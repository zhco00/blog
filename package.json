{
  "name": "ai-blog",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev": "next dev --turbo -p 3005",
    "build": "content-collections build && next build",
    "start": "next start -p 3005",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "generate:daily-tip": "tsx scripts/auto-generators/daily-tip.ts",
    "generate:github-trends": "tsx scripts/auto-generators/github-trends.ts",
    "generate:stackoverflow-qa": "tsx scripts/auto-generators/stackoverflow-qa.ts",
    "newsletter:daily": "tsx scripts/newsletter/send-daily.ts",
    "newsletter:weekly": "tsx scripts/newsletter/send-weekly.ts",
    "email:preview": "email dev --dir lib/email/templates --port 3010",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@content-collections/core": "^0.13.1",
    "@content-collections/mdx": "^0.2.2",
    "@content-collections/next": "^0.2.4",
    "@neondatabase/serverless": "^1.0.2",
    "@octokit/rest": "^22.0.1",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^1.0.6",
    "@sentry/nextjs": "^10.38.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "drizzle-orm": "^0.45.1",
    "jose": "^6.1.3",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-email": "^5.2.5",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "resend": "^6.9.1",
    "tailwind-merge": "^2.6.1",
    "tsx": "^4.21.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@content-collections/cli": "^0.1.8",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "drizzle-kit": "^0.31.8",
    "jsdom": "^26.0.0",
    "lefthook": "^1.10.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vite-tsconfig-paths": "^5.1.0",
    "vitest": "^3.0.0"
  }
}
